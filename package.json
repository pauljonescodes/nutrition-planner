{
    "private": true,
    "main": "main/index.js",
    "productName": "Meal Planner",
    "name": "mealplanner",
    "version": "0.0.1",
    "scripts": {
        "clean": "rimraf dist main renderer/out renderer/.next",
        "dev": "npm run build-electron && electron .",
        "build-renderer": "next build renderer",
        "dev-renderer": "next dev renderer",
        "build-electron": "tsc -p electron-src",
        "build": "npm run build-renderer && next export renderer && npm run build-electron",
        "pack-app": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "type-check": "tsc"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.0.11",
        "@chakra-ui/react": "^2.3.6",
        "@choc-ui/chakra-autocomplete": "^5.1.2",
        "@emotion/react": "^11.10.4",
        "@emotion/styled": "^11.10.4",
        "file-saver": "^2.0.5",
        "formik": "^2",
        "framer-motion": "^7.6.1",
        "nanoid": "^4.0.0",
        "next": "^13.0.0",
        "pouchdb-adapter-idb": "^7.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-infinite-scroller": "^1.2.6",
        "react-is": "^18.2.0",
        "rxdb": "^13.7.0",
        "rxdb-hooks": "^4.0.3",
        "rxjs": "^7",
        "styled-components": "^5",
        "use-file-picker": "^1.5.1",
        "yup": "^0"
    },
    "devDependencies": {
        "@types/file-saver": "^2.0.5",
        "@types/node": "^18.11.7",
        "@types/pouchdb-adapter-idb": "^6.1.4",
        "@types/react": "^18.0.23",
        "@types/react-dom": "^18.0.7",
        "@types/react-infinite-scroller": "^1.2.3",
        "rimraf": "^3",
        "typescript": "^4"
    },
    "build": {
        "asar": true,
        "files": [
            "main",
            "renderer/out"
        ]
    }
}
