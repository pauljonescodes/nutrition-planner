{
    "private": true,
    "main": "main/index.js",
    "productName": "Meal Planner",
    "name": "mealplanner",
    "version": "0.0.1",
    "scripts": {
        "clean": "rimraf dist main renderer/out renderer/.next",
        "dev": "npm run build-electron && electron .",
        "build-renderer": "next build renderer",
        "dev-renderer": "next dev renderer",
        "build-electron": "tsc -p electron-src",
        "build": "npm run build-renderer && next export renderer && npm run build-electron",
        "pack-app": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "type-check": "tsc"
    },
    "dependencies": {
        "@chakra-ui/icons": "^1",
        "@chakra-ui/react": "^1",
        "@choc-ui/chakra-autocomplete": "^4",
        "@emotion/react": "^11",
        "@emotion/styled": "^11",
        "formik": "^2",
        "framer-motion": "^5",
        "nanoid": "^3",
        "pouchdb-adapter-idb": "^7.3.0",
        "react": "^17",
        "react-dom": "^17",
        "rxdb": "^13.7.0",
        "rxjs": "^7",
        "styled-components": "^5",
        "yup": "^0"
    },
    "devDependencies": {
        "@types/node": "^14",
        "@types/react": "^16",
        "@types/react-dom": "^16",
        "@types/pouchdb-adapter-idb": "^6.1.4",
        "electron": "^13",
        "electron-builder": "^22",
        "next": "^12",
        "rimraf": "^3",
        "typescript": "^4"
    },
    "build": {
        "asar": true,
        "files": [
            "main",
            "renderer/out"
        ]
    }
}